{% extends 'base.html.twig' %}

{% block title %}Saury Christopher Portfolio - Home{% endblock %}

{% block style %}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Iceberg&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Gravitas+One&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Fira+Sans+Extra+Condensed&display=swap');
        #home{
            width: 100%;
            min-height: 100vh;
            background: url("{{ asset('img/home-bkg.jpg') }}");
            background-size: 80% 100%;
            background-position: right;
            background-repeat: no-repeat;
            background-color: #000;
            display: flex;
            justify-content: center;
        }
        #home .devIntro{
            margin-top: 5%;
            width: 300px;
            height: 300px;
            background-color: #fff;
            color: #000;
            display: grid;
            grid-template-rows: 15% 45% 40%;
        }
        #home .devIntro h2{
            font-family: 'Iceberg', cursive;
            font-size: 30px;
        }
        #home .devIntro h1{
            font-family: 'Gravitas One', cursive;
            margin-top: 6%;
            font-size: 40px;
        }
        #home .devIntro .intro{
            display: flex;
            justify-content: center;
        }
        #home .devIntro .intro p{
            font-size: 15px;
            margin: 0 4%;
            font-family: 'Fira Sans Extra Condensed', sans-serif;
        }
    </style>
{% endblock %}

{% block body %}
<section id="home">
    <div class="devIntro">
        <div>
            <h2 class="text-center mt-2">Christopher Saury</h2>
        </div>
        <div>
            <h1 class="text-center">Web Developer</h1>
        </div>
        <div class="intro">
            <p>
                I am a PHP Symfony developer and i define myself as a web artisan. I would be more than happy to take on new challenges to make you achieve your projects.
            </p>
        </div>
    </div>
</section>
{% endblock %}
